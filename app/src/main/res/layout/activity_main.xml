<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Convertidor de Grados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etF"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:textSize="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/F"
        app:layout_constraintTop_toTopOf="@+id/F"/>

    <EditText
        android:id="@+id/etC"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:textSize="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/C"
        app:layout_constraintTop_toTopOf="@+id/C"/>

    <TextView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="C째"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="F째"
        app:layout_constraintStart_toStartOf="@+id/C"
        app:layout_constraintTop_toBottomOf="@+id/C"/>

    <Button
        android:id="@+id/btnGF"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/black"
        android:text="째F"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btnGC"
        app:layout_constraintTop_toTopOf="@+id/btnGC"/>

    <Button
        android:id="@+id/btnGC"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="째C"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/F"
        app:layout_constraintTop_toTopOf="@+id/F"/>

</androidx.constraintlayout.widget.ConstraintLayout>